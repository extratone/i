# ----------------------------------------------------------------------
# Implements stack window for gdb
# ----------------------------------------------------------------------

itcl::class StackWin {
  inherit EmbeddedWin GDBWin

  private {
    variable maxwidth 40
    variable Running 0
    variable protect_me 0
    method build_win {}
    method cursor {glyph}
    method change_frame {}
    method no_inferior {}
  }

  public {
    method reconfig {}
    method constructor {args} 
    method destructor {}

    #
    # GDB Events
    #
    method busy {event}
    method idle {event}
    method update {event}
  }

}

